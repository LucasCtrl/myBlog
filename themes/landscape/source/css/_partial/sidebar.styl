if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 14px
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    font-size: 14px
    margin-right: 5px
    display: inline-block
  a:before
    content: '#'

.follow_me
  a:hover
    text-decoration: none
  img
    text-align: center
    margin: 5px 10px 5px 10px
    width: 40px
    height: auto
  .tipeee
    width: auto
    height 40px